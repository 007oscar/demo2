<p id="notice"><%= notice %></p>

<h1>Experts</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Especialidad(es)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @experts.each do |expert| %>

        <td><%= expert.nombre %></td>
        <td>
          <% expert.specialties.each do |s| %>
            <%= s.especialidad %> |
          <% end %>
        </td>
        <td><%= link_to 'Show', expert %></td>
        <td><%= link_to 'Edit', edit_expert_path(expert) %></td>
        <td><%= link_to 'Destroy', expert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>

  </tbody>
</table>

<br>

<%= link_to 'New Expert', new_expert_path %>
