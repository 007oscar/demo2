p#notice= notice
h1 Validations
table
  thead
    tr
      th Registry
      th Validador
      th Ciudad
      th Estado
      th colspan="4"
  tbody
    - @validations.each do |validation|
      tr
        td= "Folio :#{validation.registry.folio.to_s}/#{validation.registry.year_folio.to_s} --> #{validation.registry.expedient.expediente}"
        td= validation.expert.nombre
        td= validation.city.ciudad
        td= validation.city.estado

        td= link_to 'Show', validation
        td= link_to 'Edit', edit_validation_path(validation)
        td= link_to 'Formato', reports_validacion_path(validation.registry_id)
        td= link_to 'Destroy', validation, method: :delete, data:{ confirm: 'Are you sure?'}
br
= link_to 'New Validation', new_validation_path
