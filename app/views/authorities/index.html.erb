<p id="notice"><%= notice %></p>

<h1>Authorities</h1>

<table>
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authorities.each do |authority| %>
      <tr>
        <td><%= authority.nombres %></td>
        <td><%= authority.apellidos %></td>
        <td><%= authority.title %></td>
        <td><%= link_to 'Show', authority %></td>
        <td><%= link_to 'Edit', edit_authority_path(authority) %></td>
        <td><%= link_to 'Destroy', authority, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

