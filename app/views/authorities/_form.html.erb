<%= form_with(model: authority, local: true) do |form| %>
  <% if authority.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(authority.errors.count, "error") %> prohibited this authority from being saved:</h2>

      <ul>
      <% authority.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title_id %>
    <%= form.select :title_id, Title.all.map{|t| [ t.titulo, t.id]}, :prompt => "Select One" %>
  </div>

  <div class="field">
    <%= form.label :nombres %>
    <%= form.text_field :nombres, id: :authority_nombres %>
  </div>

  <div class="field">
    <%= form.label :apellidos %>
    <%= form.text_field :apellidos, id: :authority_apellidos %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
